<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/fa/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header-bar">
            <div class="left">
                <i class="fas fa-book-open"></i>
                <div class="title-box">
                    <div class="header-title">Book Management</div>
                    <div class="header-semi-title" >Manage your book collection</div>
                </div>
            </div>
            <div class="right">
                <a class="btn btn-create" href="/create">
                    <i class="fas fa-plus"></i>
                    <div class="btn-text">Add New Book</div>
                </a>
            </div>
        </div>

        <div class="books-container">
            <div class="inner">
                <% books.forEach(function(book) { %>

                    <div class="book-box">
                        <div class="top">
                            <div class="left">
                                <div class="img-box">
                                    <img src="/images/book-storage/<%= book.image %>" alt="<%= book.title %>">
                                </div>
                            </div>
                            <div class="right">
                                <div class="book-name"><%= book.title %></div>
                                <div class="book-author"><%= book.author %></div>
                                <div class="book-genre"><%= book.genre %></div>
                                <div class="book-publiched">Published: <%= book.published_year %></div>
                                <div class="book-des">Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque iusto sit ducimus officia fuga laborum.</div>
                            </div>
                        </div>
                        <div class="bottom">
                            <a class="btn btn-view" href="/book/<%= book._id %>">
                                <i class="fas fa-eye"></i>
                                <div>View</div>
                            </a>
                            <a class="btn btn-edit" href="/book/<%= book._id %>">
                                <i class="fas fa-edit"></i>
                                <div>Edit</div>
                            </a>
                            <a class="btn btn-del" href="/delete-book/<%= book._id %>" onclick="return confirm('Confirm delete?')">
                                <i class="fas fa-trash-alt"></i>
                                <div>Delete</div>
                            </a>

                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

    </div>


    <script src="/js/jquery.min.js"></script>
    <script src="/js/home.js"></script>
</body>
</html>